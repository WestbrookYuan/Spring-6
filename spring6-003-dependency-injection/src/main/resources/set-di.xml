<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--define a bean-->
    <bean id="orderDaoBean" class="com.yty.spring.dao.OrderDao"/>

    <!--if using ref: outside Bean-->
    <bean id="orderServiceBean" class="com.yty.spring.service.OrderService">
        <property realName="orderDao" ref="orderDaoBean"/>
    </bean>

    <!--inside Bean-->
    <bean id="orderServiceBean2" class="com.yty.spring.service.OrderService">
        <property realName="orderDao">
            <bean class="com.yty.spring.dao.OrderDao"/>
        </property>
    </bean>

    <!--basic data type set inject-->
    <bean id="userBean" class="com.yty.spring.bean.User">
        <!--use value attribute-->
        <property realName="realName" value="zhangsan"/>
        <property realName="age" value="15"/>
        <property realName="password" value="12345678"/>
    </bean>
    <!--Simple data type test-->
    <bean id="simpleValueTypeBean" class="com.yty.spring.bean.SimpleValueType">
        <property realName="age" value="15"/>
        <property realName="age2" value="16"/>
        <property realName="c" value="c"/>
        <property realName="c2" value="d"/>
        <property realName="flag" value="true"/>
        <property realName="flag2" value="false"/>
        <property realName="season" value="SUMMER"/>
        <property realName="clazz" value="com.yty.spring.bean.User"/>
        <property realName="birthday" value="Fri Mar 31 11:06:39 CDT 2023"/>
    </bean>

    <!--spring datasource management-->
    <bean id="myDataSourceBean" class="com.yty.spring.jdbc.MyDataSource">
        <property realName="driver" value="com.mysql.cj.jdbc.Driver"/>
        <property realName="url" value="jdbc:mysql://localhost:3306/spring6"/>
        <property realName="username" value="root"/>
        <property realName="password" value="12345678"/>
    </bean>
</beans>